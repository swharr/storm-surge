# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_file = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4

[*.md]
# Markdown uses trailing spaces for line breaks
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

